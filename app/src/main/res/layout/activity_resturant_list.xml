<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResturantList">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/horizontal"
        android:scrollbars="none"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:id="@+id/mcdOffers"
                android:src="@drawable/mcda"
                android:background="@drawable/first_horizontal"
                >
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/mcdOffers"
                android:src="@drawable/dosa"
                android:background="@drawable/first_horizontal"
                android:id="@+id/dosaOffers"
                >
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/domonos"
                android:background="@drawable/first_horizontal"
                android:layout_toRightOf="@id/dosaOffers"
                android:id="@+id/dominosOffers"
                >
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/thali"
                android:background="@drawable/first_horizontal"
                android:layout_toRightOf="@id/dominosOffers"
                android:id="@+id/thaliOffers"
                ></ImageView>
    </RelativeLayout>
    </HorizontalScrollView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_resturant"
        android:layout_below="@id/horizontal"
        >
    </ListView>
</RelativeLayout>