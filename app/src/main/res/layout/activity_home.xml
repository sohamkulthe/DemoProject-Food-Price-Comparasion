<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/app_bar_home"
        android:background="#FC8019"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_margin="10dp"
            android:text="Bon Appetite"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="22sp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:text="Top Rated"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_below="@id/app_bar_home"
        android:id="@+id/top_rated_text"
        android:textColor="#FC0C0C0C"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/top_rated_text"
        android:id="@+id/top_horizontal"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#1DFFFFFF"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:id="@+id/mcdOffers"
                android:src="@drawable/mcda"
                android:background="@drawable/first_horizontal"
                >
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/mcdOffers"
                android:src="@drawable/domonos"
                android:background="@drawable/first_horizontal"
                android:id="@+id/dominosOffers"
                >
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/the_appetite"
                android:background="@drawable/first_horizontal"
                android:layout_toRightOf="@id/dominosOffers"
                android:id="@+id/appetiteOffers"
                >
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:src="@drawable/thali"
                android:background="@drawable/first_horizontal"
                android:layout_toRightOf="@id/appetiteOffers"
                android:id="@+id/sarovarzOffers"
                ></ImageView>
        </RelativeLayout></HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_horizontal"
        android:layout_marginLeft="20dp"
        android:id="@+id/secondHorizontal"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breakfast_relativeLayout"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_free_breakfast_black_24dp"
                android:id="@+id/breakfast_imageView"
                android:background="@drawable/second_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textColor="#141313"
                android:textStyle=""
                android:textSize="20sp"
                android:layout_below="@+id/breakfast_imageView"
                android:id="@+id/brekfast_textView"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/breakfast_relativeLayout"
            android:id="@+id/lunch_relativeLayout"
            android:layout_marginLeft="35dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_room_service_black_24dp"
                android:id="@+id/lunch_imageView"
                android:background="@drawable/second_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:layout_marginLeft="15dp"
                android:textColor="#141313"
                android:textSize="20sp"
                android:layout_below="@+id/lunch_imageView"
                android:id="@+id/lunch_textView"
                />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lunch_relativeLayout"
                android:id="@+id/snacks_relativeLayout"
                android:layout_marginLeft="35dp"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_restaurant_menu_black_24dp"
                    android:id="@+id/snacks_imageView"
                    android:background="@drawable/second_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snacks"
                    android:layout_marginLeft="15dp"
                    android:textColor="#141313"
                    android:textSize="20sp"
                    android:layout_below="@+id/snacks_imageView"
                    android:id="@+id/snacks_textView"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/snacks_imageView"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/drinks_relativeLayout">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_place_black_24dp"
                        android:layout_margin="10dp"
                        android:id="@+id/drinks_imageView"
                        android:background="@drawable/second_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drinks"
                        android:layout_marginLeft="15dp"
                        android:textColor="#141313"
                        android:textSize="20sp"
                        android:layout_below="@+id/drinks_imageView"
                        android:id="@+id/drinks_textView"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/secondHorizontal"
        android:id="@+id/bottomHorizontal"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:src="@drawable/thali"
                android:background="@drawable/first_horizontal"
                android:id="@+id/ShivSagarThali"
                ></ImageView>
            <ImageView
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/mcdResto"
                android:src="@drawable/mcda"
                android:layout_toRightOf="@id/ShivSagarThali"
                android:background="@drawable/first_horizontal"
                >
            </ImageView>
            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/mcdResto"
                android:src="@drawable/domonos"
                android:background="@drawable/first_horizontal"
                android:id="@+id/dominosResto"
                >
            </ImageView>
            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:src="@drawable/the_appetite"
                android:background="@drawable/first_horizontal"
                android:layout_toRightOf="@id/dominosResto"
                android:id="@+id/appetiteResto">
            </ImageView>
        </RelativeLayout></HorizontalScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_fragment"
        />
</RelativeLayout>

