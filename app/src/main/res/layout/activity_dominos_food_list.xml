<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    tools:context=".DominosFoodList">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:background="@drawable/list_back"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zomto"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginLeft="200dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swiggy"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/McdListView"
            />

        <ListView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/price1ListView"
            android:scrollbars="none"
            android:layout_toRightOf="@id/McdListView"
            >
        </ListView>
        <ListView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/price2ListView"
            android:layout_toRightOf="@id/price1ListView"
            >
        </ListView>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>